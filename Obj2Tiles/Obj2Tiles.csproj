<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyVersion>1.0.12</AssemblyVersion>
        <FileVersion>1.0.12</FileVersion>
        <InvariantGlobalization>true</InvariantGlobalization>
	    <PackageId>Obj2Tiles</PackageId>
	    <Version>1.0.12</Version>
	    <PackageTags>Obj2Tiles;obj;3dtiles</PackageTags>
	    <Description>
			Obj2Tiles is a fully fledged tool to convert OBJ files to 3D Tiles format. It creates multiple LODs, splits the mesh and repacks the textures.
		</Description>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\MeshDecimatorCore\MeshDecimatorCore.csproj" />
      <ProjectReference Include="..\Obj2Gltf\Obj2Gltf.csproj" />
      <ProjectReference Include="..\Obj2Tiles.Library\Obj2Tiles.Library.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.9.1" />
    </ItemGroup>
</Project>
